{
  "name": "wish-list-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development webpack-dev-server --config=./webpack.config.dev.js --host 0.0.0.0 --port=3000",
    "build": "rm -rf ./dist && yarn && NODE_ENV=production webpack --config=./webpack.config.prod.js && cp -r ./public/* ./dist",
    "lint": "eslint 'app/**/*.{js,ts,tsx}' --fix",
    "format": "prettier --write ./**/*.{tsx,ts}",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "classnames": "^2.2.6",
    "core-js": "^3.6.5",
    "isomorphic-unfetch": "^3.0.0",
    "lodash.debounce": "^4.0.8",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hook-form": "^6.4.0",
    "react-hot-loader": "^4.12.21",
    "react-redux": "^7.2.1",
    "react-transition-group": "^4.4.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.7",
    "tailwindcss": "^1.7.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@hot-loader/react-dom": "^16.13.0",
    "@types/classnames": "^2.2.10",
    "@types/lodash.debounce": "^4.0.6",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.45",
    "@types/react-dom": "^16.9.8",
    "@types/react-redux": "^7.1.9",
    "@typescript-eslint/eslint-plugin": "^3.9.1",
    "@typescript-eslint/parser": "^3.9.1",
    "autoprefixer": "^10.0.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "html-webpack-plugin": "^4.4.1",
    "husky": ">=4",
    "lint-staged": ">=10",
    "mini-css-extract-plugin": "^0.11.2",
    "postcss": "^8.0.5",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-loader": "^4.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.5",
    "resource-hints-webpack-plugin": "^0.0.2",
    "sass": "^1.26.11",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "typescript": "^3.9.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "yarn": "^1.22.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "app/**/*.{js,jsx,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
